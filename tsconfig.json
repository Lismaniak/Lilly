{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "Node",
    "rootDir": "assets/ts",
    "outDir": "public/assets",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["assets/ts/**/*.ts"],
  "exclude": ["node_modules", "vendor", "public/assets"]
}
